{
  "description": "VIEW is an intelligent computer-assisted language learning (ICALL) system designed to provide language learning activity resources.",
  "homepage_url": "http://sifnos.sfs.uni-tuebingen.de/VIEW",
  "manifest_version": 2,
  "name": "VIEW",
  "version": "1.0.3063",

  "applications": {
    "gecko": {
      "id": "view@mozilla.org"
    }
  },
  
  "icons": {
      "48": "icons/view-48.png",
      "64": "icons/view-64.png",
      "96": "icons/view-96.png",
      "128": "icons/view-128.png"
    },
 
  "browser_action": {
    "browser_style": true,
 
    "default_icon": {
      "16": "icons/view-16.png",
      "19": "icons/view-19.png",
      "32": "icons/view-32.png",
      "38": "icons/view-38.png",
      "64": "icons/view-64.png"
    }
  },
  
  "background": {
      "scripts": [
        "lib/jquery-3.1.1.min.js",
        "background.js"
      ]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
        "lib/jquery-ui.min.css",
        "content_scripts/css/interaction.css",
        "content_scripts/css/view-menu.css",
        "content_scripts/css/about.css",
        "content_scripts/css/notification.css",
        "content_scripts/css/sidebar.css",
        "content_scripts/css/tooltip.css"
      ],
      "js": [
        "lib/jquery-3.1.1.min.js",
        "lib/jquery-ui.min.js",
        "content_scripts/js/view.js",
        "content_scripts/js/selector.js",
        "content_scripts/js/toolbar-iframe.js",
        "content_scripts/js/container.js",
        "content_scripts/js/enhancer.js",
        "content_scripts/js/view-menu.js",
        "content_scripts/js/about.js",
        "content_scripts/js/blur.js",
        "content_scripts/js/notification.js",
        "content_scripts/js/lib.js",
        "content_scripts/js/sidebar.js",
        "content_scripts/js/activities/tracker.js",
        "content_scripts/js/activities/activityHelper.js",
        "content_scripts/js/activities/color.js",
        "content_scripts/js/activities/click.js",
        "content_scripts/js/activities/mc.js",
        "content_scripts/js/activities/cloze.js",
        "content_scripts/js/topics/ru/rusadjectives.js",
        "content_scripts/js/topics/ru/rusverbs.js",
        "content_scripts/js/topics/ru/rusverbaspect.js",
        "content_scripts/js/topics/ru/rusparticiples.js",
        "content_scripts/js/topics/ru/ruswordstress.js",
        "content_scripts/js/topics/ru/rusassistivereading.js",
        "content_scripts/js/topics/es/serestar.js",
        "content_scripts/js/topics/en/gerunds.js",
        "content_scripts/js/topics/en/nouncountability.js",
        "content_scripts/js/topics/en/phrasalverbs.js",
        "content_scripts/js/topics/en/whquestions.js",
        "content_scripts/js/messageHandler.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "cookies",
    "*://sifnos.sfs.uni-tuebingen.de/*",
    "https://view.aleks.bg/*",
    "*://*.localhost/*"
  ], 
  
  "web_accessible_resources": [
  	"toolbar/toolbar.html",
    "content_scripts/html/about.html",
    "content_scripts/html/view-menu.html",
    "icons/view-128.png",
    "icons/loading.gif",
    "topics/articles.json",
    "topics/determiners.json",
    "topics/nouns.json"
  ]
}
