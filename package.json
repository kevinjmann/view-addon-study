{
  "name": "VIEWWebExtension",
  "version": "1.1.0",
  "description": "VIEW provides supplementary language learning activities using authentic texts selected by the learner.",
  "repository": {
    "type": "git",
    "url": "https://git.aleks.bg/view/view-addon"
  },
  "scripts": {
    "build": "webpack",
    "bundle": "web-ext -s ./addon -a dist build --overwrite-dest",
    "clean": "rm -rf addon/*",
    "start": "concurrently --kill-others \"npm run watch:build\" \"npm run webext:run\"",
    "test": "npm-run-all test:*",
    "test:unit": "karma start --browsers ChromiumHeadless --single-run=true",
    "test:func": "export FIREFOX_BINARY=${FIREFOX_BINARY:-firefox} && npm run bundle && XPI_NAME=dist/view-1.1.0.zip mocha ./viewWE-test/test/functional/",
    "watch:build": "webpack  --progress --colors --watch",
    "watch:test": "karma  start --browsers ChromiumHeadless --single-run=false",
    "watch:debug": "karma start --browsers Chromium --single-run=false",
    "webext:lint": "web-ext -s ./addon lint",
    "webext:run": "web-ext -s ./addon run --verbose"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "babel-loader": "^7.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.0.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-promise": "^3.5.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "fs-promise": "^2.0.3",
    "fx-runner": "^1.0.6",
    "geckodriver": "^1.7.1",
    "html-loader": "^0.4.5",
    "istanbul-instrumenter-loader": "^2.0.0",
    "karma": "^1.7.0",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-coveralls": "^1.1.2",
    "karma-firefox-launcher": "^1.0.1",
    "karma-fixture": "^0.2.6",
    "karma-html2js-preprocessor": "^1.1.0",
    "karma-json-fixtures-preprocessor": "0.0.6",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-sinon": "^1.0.5",
    "karma-sinon-chrome": "^0.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "mocha": "^3.4.2",
    "node-sass": "^4.5.3",
    "npm-run-all": "^3.1.2",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.5",
    "selenium-webdriver": "^3.4.0",
    "sinon": "^2.3.5",
    "sinon-chrome": "^2.2.1",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "virtualenv": "^0.3.1",
    "web-ext": "^1.6.0",
    "webpack": "^2.6.1"
  },
  "dependencies": {
    "firebase": "^4.1.2",
    "jquery": "^3.1.1",
    "jquery-ui": "^1.12.1",
    "nanomorph": "^5.1.2"
  },
  "engines": {
    "firefox": ">=48.0a1"
  },
  "permissions": {
    "multiprocess": true
  }
}
